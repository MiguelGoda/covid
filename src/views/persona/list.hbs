<div class="container p4">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables" class="my-4 text-center">Lista Pacientes</h1>
                <a href="/persona/add" class="btn btn-success m-1">Agregar Paciente</a>
            </div>
            <div class="table-responsive-sm">
                <table class="table table-hover cellspacing=" 0" width="100%"">
                    <thead>
                    <tr>
                    <th scope=" col">N</th>
                    <th scope=" col">Nombres</th>
                    <th scope="col">Consulta</th>
                    <th scope="col">Nivel Enfermedad</th>
                    <th scope="col">Fecha Registro</th>
                    <th scope="col">Domicilio</th>
                    <th scope="col">Sexo</th>
                    <th scope="col">Contacto</th>
                    <th scope="col">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                        {{#each persona}}
                        <tr>
                            <td>{{@key}}</td>
                            <td> {{nombre_completo}} </td>
                            <td> {{tipo_registro}} </td>
                            <td> {{NOMBRE_NIVEL_ENFERMEDAD}} </td>
                            <td> {{moment fecha_registro format= "DD/MM/YY"}} </td>
                            <td> {{CI}} </td>
                            <td> {{celular}} </td>
                            <td> {{domicilio}} </td>
                            <td style="display: flex">
                                <a href="/persona/historial/{{id_persona}}" class="btn btn-info mr-1"><i class="fa fa-tasks" aria-hidden="true"></i></a>
                                <a href="/sintomas/add/{{id_persona}}" class="btn btn-warning mr-1"><i class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>