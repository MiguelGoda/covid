<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <div class="card">
                <h4 class="p-4">Agregar Personas</h4>
                <div class="card-body">
                    <form action="/persona/add" method="POST">
                        <div class="form-group">
                            <select class="form-control" name="id_tipo_persona" placeholder="Tipo persona">
                                {{#each tipo_persona}}
                                <option value="{{id_tipo_persona}}"> {{nombre_tipo_persona}} </option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" name="ap_paterno" class="form-control" placeholder="Apellido Paterno"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="ap_materno" class="form-control" placeholder="Apellido Materno">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nombre" class="form-control" placeholder="Nombres">
                        </div>
                        <div class="form-group">
                            <input placeholder="Fecha de Nacimiento" name="fecha_nacimiento" class="form-control"
                                type="text" onfocus="(this.type='date')" id="date">
                        </div>
                        <div class="form-group">
                            <input type="text" name="CI" class="form-control" placeholder="cedula">
                        </div>
                        <div class="form-group">
                            <input type="number" name="celular" class="form-control" placeholder="Celular">
                        </div>
                        <div class="form-group">
                            <input type="text" name="domicilio" class="form-control" placeholder="Domicilio">
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" value="M" id="customRadio1" name="sexo" class="custom-control-input"
                                    checked="">
                                <label class="custom-control-label" for="customRadio1">Hombre</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input type="radio" value="F" id="customRadio2" name="sexo"
                                    class="custom-control-input">
                                <label class="custom-control-label" for="customRadio2">Mujer
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block" aria-pressed="true" autocomplete="off">
                                Guardar
                            </button>
                            <a href="/sintomas/add" class="btn btn-secondary btn-block" aria-pressed="true">agregar sintomas</a>
                            <a href="/persona" class="btn btn-secondary btn-block" aria-pressed="true">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>